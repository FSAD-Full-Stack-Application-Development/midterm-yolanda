      <%= link_to "Edit Rating", edit_rating_path(@rating), 
          style: "background-color: #ffc107; color: #212529; padding: 0.75rem 1.5rem; text-decoration: none; border-radius: 4px; font-size: 1rem;" %>
      <%= button_to "Delete Rating", @rating, method: :delete, data: { confirm: "Are you sure you want to delete this rating?" }, 
          style: "background-color: #dc3545; color: white; padding: 0.75rem 1.5rem; border: none; border-radius: 4px; font-size: 1rem; cursor: pointer;" %>
    <% end %>
